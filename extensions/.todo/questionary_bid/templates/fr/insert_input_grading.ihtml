<html>
<head>
  <title>Insert questiontype grading</title>
  <meta http-equiv="content-type" content="text/html; charset=UTF-8">

  <LINK rel="stylesheet" type="text/css" href="http://bid:8080//css/contentframe.css">
  <LINK rel="stylesheet" type="text/css" href="http://bid:8080//css/rights.css">
  <LINK rel="stylesheet" type="text/css" href="http://bid:8080//css/dialog.css">
  <script language="JavaScript1.2" src="http://bid:8080//javascript/focus.js"></script>
  <script language="JavaScript1.2" src="http://bid:8080//javascript/select.js"></script>
  <script language="javascript" type="text/javascript" src="http://bid:8080//javascript/tinymce/jscripts/tiny_mce/tiny_mce.js"></script>
  <script language="javascript" type="text/javascript">
    tinyMCE.init({
            mode : "textareas",
            theme : "advanced",
            plugins : "bbcode",
            language: "de",
            editor_selector : "bbcode",
            theme_advanced_buttons1 : "bold,italic,underline,|,image,link,unlink,|,forecolor,removeformat,|,undo,redo",
            theme_advanced_buttons2 : "",
            theme_advanced_buttons3 : "",
            entity_encoding : "raw",
            remove_linebreaks : false
            theme_advanced_toolbar_location : "top"
            theme_advanced_toolbar_align : "left"
    });
  </script>
</head>


<body bgcolor="#DEDEDE" topmargin="7" leftmargin="7" onLoad="setFocus();">


<script language="Javascript1.2">
function form_submit(mission, url)
{
  if(mission == "close")
    window.close();
  else
  {
  document.getElementById("mission").value = mission;
    document.getElementById("form_blueprint").action = url;
    document.getElementById("form_blueprint").submit();
  }
}
</script>


<form method="POST" name="form_blueprint" id="form_blueprint" action="" enctype="multipart/form-data">
<input type="hidden" name="mission" id="mission" value="">
<input type="hidden" name="questionary" id="questionary" value="{QUESTIONARY_ID}">

<!-- Rahmen oben -->
<h1 class="titlepane">Insert questiontype grading</h1>

<!-- Mittelteil und Content -->
<div class="dialogpane" align="center">

<!-- BEGIN error_no_text --><b>Description must not be empty.</b><br><!-- END error_no_text -->
<!-- BEGIN error_no_options --><b>There has to be at least one element.</b><br><!-- END error_no_options -->

<!-- BEGIN button_insert -->Insert<!-- END button_insert -->
<!-- BEGIN button_sort -->Sort<!-- END button_sort -->
<!-- BEGIN button_save -->Save<!-- END button_save -->
<!-- BEGIN button_cancel -->Cancel<!-- END button_cancel -->
<!-- BEGIN button_spacer -->&nbsp;&nbsp;<!-- END button_spacer -->

<script language="javascript" type="text/javascript" src="http://bid:8080//modules/questionary/javascript/dom_grading.js"></script>

<script language="JavaScript1.2">
nooption="No elements available";

function confirm_delete(option_id)
{
  if(edit_multiple_check==0)
  {
	option_name=document.getElementById("td1_"+option_id).firstChild.data;
  	check = confirm('Do you really want to delete the element "' + option_name + '"?');
  	if(check == true)	deleteNode(option_id);
  }
}
</script>

<b>{FEEDBACK}</b>

<table width="350">
<tr style="background-color:#CCCCCC;">
  <td colspan="2" align="center"><b>General:</b></td>
</tr>
<tr style="background-color:#D8D8D8;">
  <td style="vertical-align:top; text-align:right;">Description:</td>
  <td style="vertical-align:top;"><textarea name="description" rows="5" id="description" style="width:250px">{DESCRIPTION}</textarea></td>
</tr>
<tr>
  <td style="background-color:#D8D8D8; vertical-align:middle; text-align:right;">Mandatory:</td>
  <td style="background-color:#D8D8D8; vertical-align:top;"><input type="checkbox" name="must" value="1" {MUST}></td>
</tr>
<tr>
  <td style="background-color:#D8D8D8; vertical-align:middle; text-align:right;">Show in list:</td>
  <td style="background-color:#D8D8D8; vertical-align:top;"><input type="checkbox" name="output" value="1" {OUTPUT}></td>
</tr>

<tr>
  <td>&nbsp;</td>
  <td>&nbsp;</td>
</tr>
<tr>
  <td colspan="2" align="center" style="background-color:#CCCCCC;"><b>Elements:</b></td>
  </tr>
<tr style="background-color:#D8D8D8;">
  <td style="vertical-align:top; text-align:right;">Text:</td>
  <td style="vertical-align:top;"><textarea rows="5" name="question" id="question" style="width:250px">{QUESTION}</textarea><br /><button type="button" onClick="insertElement(document.getElementById('question').value);">{BUTTON_LABEL_INSERT}</button></td>
</tr>

<tr>
	<td colspan="2">
		<table width="100%" border="0" cellpadding="0" cellspacing="0">
		<tbody id="options">
			<tr>
			  <td colspan="3" align="right">
				<table cellpadding="0" cellspacing="0">
				  <tr>
					<td><img src="http://bid:8080//modules/questionary/icons/edit_bow.gif" border="0"></td>
					<td bgcolor="#CCCCCC"><img src="http://bid:8080//modules/questionary/icons/edit_sort.gif" border="0" alt="Sort" title="Sort" style="cursor:pointer;" onclick="javascript:form_submit('sort', '{SORT_URL}');"></td>
					<td bgcolor="#CCCCCC">&nbsp;</td>
				  </tr>
				</table>
			  </td>
			</tr>
			<tr style="background-color:#CCCCCC;">
			  <td width="100%" height="16" valign="middle" nowrap>Elements</td>
			  <td align="center" valign="middle" nowrap>Action</td>
			</tr>
			
			<!-- BEGIN grading_row -->
			<tr style="background-color:#D8D8D8;" id="tr_{GRADING_OPTION_ID}">
			  <td valign="middle" id="td1_{GRADING_OPTION_ID}">{GRADING_OPTION_NAME} <input type="hidden" name="grading_option_{GRADING_OPTION_ID}" 
			  id="grading_option_{GRADING_OPTION_ID}" value="{GRADING_OPTION_NAME}"></td>
			  <td align="center" ><img src="http://bid:8080//modules/questionary/icons/element_edit.gif" alt="Edit element" title="Edit element" 
		  style="cursor:pointer;" onClick="javascript:edit_possibility('{GRADING_OPTION_ID}');"><img src="http://bid:8080//modules/questionary/icons/delete.gif" alt="Delete element" title="Delete element" style="cursor:pointer;" onClick="confirm_delete('{GRADING_OPTION_ID}');"></td>
			</tr>
			<!-- END grading_row -->
			
			<!-- BEGIN grading_no_row -->
			<tr style="color:#808080; text-align:center;" id="norow">
			  <td colspan="2">No elements available</td>
			</tr>
			<!-- END grading_no_row -->
		</tbody>
		</table>
	</td>
</tr>
</table>


</div>

<table width="100%" height="5" border="0" cellpadding="0" cellspacing="0" align="right">
  <tr>
    <td align="center" colspan="3">
    <!-- BEGIN button_mission -->
    <button type="button" onClick="javascript:form_submit('{BUTTON_MISSION}', '{BUTTON_URL}'); return false;">{BUTTON_LABEL}</button>
    <!-- END button_mission -->
    <button type="button" onClick="javascript:form_submit('{BUTTON_CANCEL_MISSION}', '{BUTTON_CANCEL_URL}'); return false;">Cancel</button>
    </td>
  </tr>
</table>
</form>
</body>
</html>
