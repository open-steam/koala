      <a href="./category_edit.php?object={PORTLET_ID}&category={CATEGORY_ID}"><img src="./icons/edit.gif" width="16" height="16" border="0" alt="Edit category" title="Edit category"></a>
      <img src="./icons/delete.gif" width="16" height="16" border="0" style="cursor:pointer;" onclick="javascript:confirm_delete_category('{CATEGORY_ID}','{CATEGORY_NAME}')" alt="Delete category" title="Delete category">
    </td></tr></table>
  </td></tr>

  <!-- BEGIN topic_null --><tr><td style="color:#808080; background-color:#D8D8D8;">No topics available</td></tr><!-- END topic_null -->
